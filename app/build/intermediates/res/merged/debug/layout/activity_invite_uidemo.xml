<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.webrtc.activity.GroupVideoActivity"
    android:background="#2E3132">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/avgroupchat_incoming_ui"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/avgroupchat_invitorInfo_view"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/avgroupchat_useravatar"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/default_useravatar"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="卢明明"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:layout_below="@id/avgroupchat_useravatar"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:id="@+id/avgroupchat_invitorname"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="邀请你进行语音聊天"
                    android:textColor="@color/commonReminder"
                    android:layout_below="@+id/avgroupchat_invitorname"
                    android:textSize="18dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/avgroupchat_membersInfo_view"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_above="@+id/avgroupchat_incoming_controlview"
                >
                <TextView
                    android:id="@+id/avgroupchat_tempView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="通话成员"
                    android:textColor="@color/commonReminder"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"/>
                <android.webrtc.widget.AVGroupChatMemView
                    android:id="@+id/avgroupchat_members_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fastScrollEnabled="false"
                    app:imgGap="1dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/avgroupchat_incoming_controlview"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:paddingBottom="12dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/avgroupchat_refuse_call"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/icon_refuse_call" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="2">
                    <ImageView
                        android:id="@+id/avgroupchat_answer_call"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/icon_answer_call" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
