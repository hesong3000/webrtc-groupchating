<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.webrtc.activity.GroupVideoActivity"
    android:background="#2E3132">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/avgroupchat_inchatting_ui"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/grid_baselayout">
            <android.webrtc.widget.NineGridImageView
                android:id="@+id/gv_gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                app:imgGap="1dp" />
            <ImageView
                android:id="@+id/add_person"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/avgroupchat_addfriend"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/del_person01"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/delete_1"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/add_person"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/del_person02"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/delete_2"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/del_person01"
                android:layout_margin="10dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:id="@+id/controlArea">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00:01"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/avgroupchat_micmute"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_mute_normal"/>
                    <TextView
                        style="@style/groupChatText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/avgroupchat_micmute"
                        android:textSize="16dp"
                        android:text="静音" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/avgroupchat_handfree"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_speaker_on"/>
                    <TextView
                        style="@style/groupChatText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/avgroupchat_handfree"
                        android:textSize="16dp"
                        android:text="免提" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/avgroupchat_opencamera"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/avgroupchat_cameraclosed"/>
                    <TextView
                        style="@style/groupChatText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/avgroupchat_opencamera"
                        android:textSize="16dp"
                        android:text="打开摄像头" />
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:id="@+id/avgroupchat_dropcall"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/icon_refuse_call"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

